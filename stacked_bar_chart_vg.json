{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "description": "Stacked bar chart showing different types of crime from 2000 to 2021.",
  "data": {
    "url": "https://raw.githubusercontent.com/safiyasajad/FIT3179/refs/heads/main/type%20of%20crime%20from%202000-2021.csv"
  },
  "transform": [
    {
      "filter": "datum.Value != '-'"
    },
    {
      "calculate": "toNumber(datum.Value)",
      "as": "count"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 0}
    },
    "y": {
      "aggregate": "sum",
      "field": "count",
      "type": "quantitative",
      "title": "Number of Crimes",
      "stack": "zero"
    },
    "color": {
      "field": "Type of crime",
      "type": "nominal",
      "title": "Crime Type",
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Type of crime", "type": "nominal", "title": "Crime Type"},
      {"aggregate": "sum", "field": "count", "type": "quantitative", "title": "Crimes"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 14},
    "legend": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
